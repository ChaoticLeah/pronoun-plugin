    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-and-run",
            "type": "shell",
            "command": "npx",
            "args": [
                "ts-node",
                "./tasks/run/index.ts",
                "--file",
                "${file}",
                "-w",
                "-c",
                "--baseUrl",
                "https://woem.men",
                "--endUrl",
                "/"
            ],
            "options": {
                "env": {
                    "BASE_URL": "https://woem.men",
                    "END_URL": "/",
                }
            }
        }
    ]
}